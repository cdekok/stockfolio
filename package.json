{
  "name": "stockfolio",
  "version": "0.0.0",
  "license": "MIT",
  "build": {
    "appId": "stockfolio.app",
    "productName": "stockfolio",
    "buildResources": "assets/icons"
  },
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "pre-commit": "lint-staged",
    "format": "prettier --parser vue --write './src/*/**.vue' && prettier --parser typescript --write './src/*/**.ts'"
  },
  "lint-staged": {
    "*.{js,ts,vue,json,css,md}": [
      "yarn format",
      "git add"
    ]
  },
  "dependencies": {
    "@types/socket.io-client": "^1.4.32",
    "d3": "^5.0.0",
    "electron-store": "^1.3.0",
    "fuse.js": "^3.2.0",
    "lodash.debounce": "^4.0.8",
    "source-map-support": "^0.5.3",
    "vue": "^2.5.13",
    "vue-router": "^3.0.1",
    "webpack-sources": "1.1.0"
  },
  "devDependencies": {
    "@types/electron-store": "^1.3.0",
    "@types/lodash.debounce": "^4.0.3",
    "electron": "1.8.4",
    "electron-builder": "^20.0.6",
    "electron-webpack": "^2.0.1",
    "electron-webpack-ts": "^2.0.0",
    "electron-webpack-vue": "^2.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "node-sass": "^4.7.2",
    "prettier": "1.11.1",
    "sass-loader": "^6.0.6",
    "typescript": "^2.7.2",
    "webpack": "^4.5.0"
  },
  "resolutions": {
    "webpack-sources": "1.0.1"
  }
}
